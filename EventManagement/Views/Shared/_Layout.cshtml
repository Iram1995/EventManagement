<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
      

 
    <style>
        a.navbar-brand {
       font-size: 131%;
            font-weight: bold;
        }
        span.text-danger.field-validation-error {
        color: red;
        }
        .col-md-10 {
         padding-bottom: 2%;
        }
       label.control-label.col-md-2 {
       text-align:left;
       font-weight: bold;
    }
     
      
    </style>
</head>

<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="padding-top: 0.5%;
    background-color: black;
    padding-bottom: 0.5%;
    font-size: 103%;">
        <div class="container">
            <div class="navbar-header">
               
               
            </div>
            <div class="">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Fancy Empire Marquee", "GetUsers", "User", new { area = "" }, new { @class = "navbar-brand" })</li>
                   @if (User.Identity.IsAuthenticated)
                   {
                    <li>@Html.ActionLink("View users", "GetUsers", "User")</li>
                    <li>@Html.ActionLink("Create user", "CreateUser", "User")</li>
                    <li>@Html.ActionLink("Create Event", "Create", "Event")</li>
                    <li>@Html.ActionLink("View events", "GetEvents", "Event")</li>
                    
                   @* <li style="color:white;padding-top: 15px;padding-bottom: 15px;">Dear-@User.Identity.Name</li>*@
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                   }
                  
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer style="float:right">
            <p><strong>Located: </strong> Nakka Kahut Mian Wali Road Talagang </p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
